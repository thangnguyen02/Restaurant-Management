<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RestaurantManagement" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.RestaurantManagement" parent="Base.Theme.RestaurantManagement">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="toast_error">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#930202</item>
        <item name="stColorBackground">#029774</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#028340</item>
        <item name="stIconStart">@drawable/toast_error</item>
    </style>

    <style name="toast_successfully">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#930202</item>
        <item name="stColorBackground">#029774</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#028340</item>
        <item name="stIconStart">@drawable/toast_error</item>
    </style>

</resources>